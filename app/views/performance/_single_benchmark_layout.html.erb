<div class="max-w-6xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-<%= color %>-800"><%= title %></h1>
    <%= link_to "← ホームに戻る", performance_index_path, 
        class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded transition duration-300" %>
  </div>
  
  <!-- パフォーマンス情報 -->
  <div class="bg-<%= color %>-50 border border-<%= color %>-200 rounded-lg p-4 mb-6">
    <h2 class="text-xl font-semibold text-<%= color %>-800 mb-2">パフォーマンスベンチマーク結果</h2>
    <% if @duration.is_a?(Hash) %>
      <!-- データ取得のみのパフォーマンス -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-<%= color %>-700 mb-3">📊 データ取得パフォーマンス (100回実行)</h3>
        <div class="grid md:grid-cols-1 gap-4 text-sm">
          <div class="bg-white p-3 rounded">
            <strong class="text-<%= color %>-700"><%= method_name %> (データのみ):</strong><br>
            <span class="text-lg font-bold text-green-600">
              <%= sprintf("%.4f", @duration[:data_only][0] * 1000) %> ms
            </span>
          </div>
        </div>
      </div>

      <!-- データ + ビューのパフォーマンス -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-<%= color %>-700 mb-3">🎨 合計パフォーマンス (データ取得 + ビュー描画)</h3>
        <div class="grid md:grid-cols-1 gap-4 text-sm">
          <div class="bg-white p-3 rounded">
            <strong class="text-<%= color %>-700"><%= method_name %> (合計):</strong><br>
            <span class="text-lg font-bold text-green-600">
              <%= sprintf("%.4f", @duration[:with_view][0] * 1000) %> ms
            </span>
          </div>
        </div>
      </div>

      <!-- ビューオーバーヘッド解析 -->
      <div class="bg-yellow-50 p-4 rounded mb-4">
        <h3 class="text-lg font-semibold text-yellow-700 mb-2">🔍 ビュー描画オーバーヘッド</h3>
        <div class="grid md:grid-cols-1 gap-4 text-sm">
          <div>
            <strong class="text-yellow-700">ビューオーバーヘッド:</strong><br>
            <span class="text-yellow-600">
              <%= sprintf("%.4f", (@duration[:with_view][0] - @duration[:data_only][0]) * 1000) %> ms
            </span>
          </div>
        </div>
      </div>

      
      <% if @benchmark_results %>
        <div class="bg-white p-4 rounded">
          <h3 class="font-semibold text-gray-700 mb-2">詳細ベンチマーク結果:</h3>
          <pre class="text-xs text-gray-600 overflow-x-auto bg-gray-50 p-2 rounded"><%= @benchmark_results %></pre>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <%= yield %>
  </div>

  <div class="mt-6 text-center">
    <%= content_for(:footer_links) %>
  </div>
</div>
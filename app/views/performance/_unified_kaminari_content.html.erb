<div class="space-y-4">
  <% articles.each do |article| %>
    <div class="border border-gray-200 rounded p-4">
      <h3 class="font-semibold text-lg text-gray-800"><%= article.title %></h3>
      <p class="text-gray-600 mt-2"><%= truncate(article.content, length: 200) %></p>
      <div class="text-sm text-gray-500 mt-2">
        Created: <%= article.created_at.strftime("%B %d, %Y") %>
      </div>
    </div>
  <% end %>
</div>

<!-- Pagination Navigation -->
<div class="mt-6 flex justify-center">
  <nav class="flex space-x-2">
    <% if articles.prev_page %>
      <%= link_to "â† Previous", "#", class: "px-3 py-2 mx-1 rounded bg-blue-100 hover:bg-blue-200 text-blue-800" %>
    <% end %>
    
    <span class="px-3 py-2 mx-1 rounded bg-blue-500 text-white">Page <%= articles.current_page %></span>
    
    <% if articles.next_page %>
      <%= link_to "Next â†’", "#", class: "px-3 py-2 mx-1 rounded bg-blue-100 hover:bg-blue-200 text-blue-800" %>
    <% end %>
  </nav>
</div>
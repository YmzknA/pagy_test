<div class="max-w-6xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-blue-800">Pagy Pagination Demo</h1>
    <%= link_to "← Back to Home", performance_index_path, 
        class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded transition duration-300" %>
  </div>
  
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
    <h2 class="text-xl font-semibold text-blue-800 mb-2">Performance Benchmark Results</h2>
    <% if @duration.is_a?(Hash) %>
      <!-- Data Only Performance -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-blue-700 mb-3">📊 Data Retrieval Performance (50 iterations)</h3>
        <div class="grid md:grid-cols-2 gap-4 text-sm">
          <div class="bg-white p-3 rounded">
            <strong class="text-blue-700">Pagy Standard (data only):</strong><br>
            <span class="text-lg font-bold text-blue-600">
              <%= sprintf("%.4f", @duration[:data_only][0] * 1000) %> ms
            </span>
          </div>
          <div class="bg-white p-3 rounded">
            <strong class="text-blue-700">Pagy Countless (data only):</strong><br>
            <span class="text-lg font-bold text-green-600">
              <%= sprintf("%.4f", @duration[:data_only][1] * 1000) %> ms
            </span>
          </div>
        </div>
        <div class="text-xs text-gray-600 mt-2">
          Data improvement: <%= sprintf('%.1f', ((@duration[:data_only][0] - @duration[:data_only][1]) / @duration[:data_only][0] * 100).abs) %>% faster with countless
        </div>
      </div>

      <!-- Data + View Performance -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-blue-700 mb-3">🎨 Total Performance (Data + View Rendering)</h3>
        <div class="grid md:grid-cols-2 gap-4 text-sm">
          <div class="bg-white p-3 rounded">
            <strong class="text-blue-700">Pagy Standard (total):</strong><br>
            <span class="text-lg font-bold text-blue-600">
              <%= sprintf("%.4f", @duration[:with_view][0] * 1000) %> ms
            </span>
          </div>
          <div class="bg-white p-3 rounded">
            <strong class="text-blue-700">Pagy Countless (total):</strong><br>
            <span class="text-lg font-bold text-green-600">
              <%= sprintf("%.4f", @duration[:with_view][1] * 1000) %> ms
            </span>
          </div>
        </div>
        <div class="text-xs text-gray-600 mt-2">
          Total improvement: <%= sprintf('%.1f', ((@duration[:with_view][0] - @duration[:with_view][1]) / @duration[:with_view][0] * 100).abs) %>% faster with countless
        </div>
      </div>

      <!-- View Overhead Analysis -->
      <div class="bg-yellow-50 p-4 rounded mb-4">
        <h3 class="text-lg font-semibold text-yellow-700 mb-2">🔍 View Rendering Overhead</h3>
        <div class="grid md:grid-cols-2 gap-4 text-sm">
          <div>
            <strong class="text-yellow-700">Standard view overhead:</strong><br>
            <span class="text-yellow-600">
              <%= sprintf("%.4f", (@duration[:with_view][0] - @duration[:data_only][0]) * 1000) %> ms
            </span>
          </div>
          <div>
            <strong class="text-yellow-700">Countless view overhead:</strong><br>
            <span class="text-yellow-600">
              <%= sprintf("%.4f", (@duration[:with_view][1] - @duration[:data_only][1]) * 1000) %> ms
            </span>
          </div>
        </div>
      </div>
      
      <% if @benchmark_results %>
        <div class="bg-white p-4 rounded">
          <h3 class="font-semibold text-gray-700 mb-2">Detailed Benchmark Output:</h3>
          <pre class="text-xs text-gray-600 overflow-x-auto bg-gray-50 p-2 rounded">
<%= capture do %>
<% @benchmark_results.each_with_index do |result, idx| %>
<%= case idx
when 0
  "Pagy standard (data only):      #{sprintf('%.6f', result.real)}s"
when 1
  "Pagy countless (data only):     #{sprintf('%.6f', result.real)}s"
when 2
  "Pagy standard (data + view):    #{sprintf('%.6f', result.real)}s"
when 3
  "Pagy countless (data + view):   #{sprintf('%.6f', result.real)}s"
end %>
<% end %>
<% end %></pre>
        </div>
      <% end %>
    <% else %>
      <div class="grid md:grid-cols-3 gap-4 text-sm">
        <div class="bg-white p-3 rounded">
          <strong class="text-blue-700">Current Page:</strong><br>
          <span class="text-2xl font-bold text-blue-600"><%= (local_assigns[:pagy] || @pagy).page %></span>
        </div>
        <div class="bg-white p-3 rounded">
          <strong class="text-blue-700">Records:</strong><br>
          <span class="text-2xl font-bold text-blue-600"><%= (local_assigns[:pagy] || @pagy).count || "Countless" %></span>
        </div>
        <div class="bg-white p-3 rounded">
          <strong class="text-blue-700">Items per page:</strong><br>
          <span class="text-2xl font-bold text-blue-600">25</span>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4 text-gray-700">Articles (Paginated with Pagy)</h2>
    
    <% pagy_obj = local_assigns[:pagy] || @pagy %>
    <% articles = local_assigns[:articles] || @articles %>
    
    <div class="mb-4" id="pagy-nav-top">
      <div class="text-sm text-gray-500 mb-2">
        Debug: Page <%= pagy_obj.page %>, Limit: <%= pagy_obj.limit %>, 
        Prev: <%= pagy_obj.prev %>, Next: <%= pagy_obj.next %>
      </div>
      <%== pagy_nav(pagy_obj, link_extra: 'class="px-3 py-2 mx-1 rounded bg-blue-100 hover:bg-blue-200 text-blue-800"') %>
    </div>
    
    <div class="space-y-4">
      <% articles.each do |article| %>
        <div class="border border-gray-200 rounded p-4">
          <h3 class="font-semibold text-lg text-gray-800"><%= article.title %></h3>
          <p class="text-gray-600 mt-2"><%= truncate(article.content, length: 200) %></p>
          <div class="text-sm text-gray-500 mt-2">
            Created: <%= article.created_at.strftime("%B %d, %Y") %>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="mt-6" id="pagy-nav-bottom">
      <%== pagy_nav(pagy_obj, link_extra: 'class="px-3 py-2 mx-1 rounded bg-blue-100 hover:bg-blue-200 text-blue-800"') %>
    </div>
  </div>
  
  <div class="mt-6 text-center">
    <%= link_to "Compare with Kaminari", performance_kaminari_demo_path, 
        class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded transition duration-300" %>
  </div>
</div>

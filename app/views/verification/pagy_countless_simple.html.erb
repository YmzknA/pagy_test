<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6 text-purple-800">Pagy Countless - 簡単な検証</h1>
  
  <div class="bg-purple-50 border border-purple-200 rounded-lg p-4 mb-6">
    <h2 class="text-xl font-semibold mb-3">実行ログ</h2>
    <% @step_log.each do |step| %>
      <div class="text-sm text-gray-700 mb-1 font-mono"><%= step %></div>
    <% end %>
  </div>

  <div class="bg-white border rounded-lg p-4 mb-6">
    <h2 class="text-xl font-semibold mb-3">結果データ</h2>
    <p><strong>Pagy情報:</strong> Page <%= @pagy.page %>, Limit <%= @pagy.limit %>, Next <%= @pagy.next %></p>
    <p><strong>取得記事数:</strong> <%= @articles_array.count %></p>
    <div class="mt-3">
      <strong>記事サンプル:</strong>
      <% @articles_array.first(3).each do |article| %>
        <div class="text-sm border rounded p-2 mt-1">ID: <%= article.id %> - <%= article.title.truncate(50) %></div>
      <% end %>
    </div>
  </div>
  
  <%= link_to "← ホームに戻る", performance_index_path, 
      class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
</div>